<main class="edit">
  <!-- Edit Page (Only for logged-in users) -->
  <section id="create">
    <div class="form">
      <h2>Edit item</h2>
      <form method="post" class="create-form">
        <input type="text" name="name" id="name" placeholder="Name" {{#if data.name}}
          value="{{data.name}}"
          {{/if}} />
        <input type="text" name="years" id="years" placeholder="Years" {{#if data.years}}
          value="{{data.years}}"
          {{/if}} />
        <input type="text" name="kind" id="kind" placeholder="Kind" {{#if data.kind}}
          value="{{data.kind}}"
          {{/if}} />
        <input
          type="text"
          name="image"
          id="animal-img"
          placeholder="Image url"
          {{#if data.image}}
          value="{{data.image}}"
          {{/if}}
        />
        <input
          type="text"
          name="need"
          id="needs-of"
          placeholder="Needs of"
          {{#if data.need}}
          value="{{data.need}}"
          {{/if}}
        />
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Location"
          {{#if data.location}}
          value="{{data.location}}"
          {{/if}}
        />
        <textarea id="description" placeholder="Description..." name="description"{{#if data.description}} 
        >{{data.description}}</textarea>{{/if}}

        <button type="submit">Edit</button>
      </form>
    </div>
  </section>
</main>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/styles/styles.css" />
    <title>FriendlyWorld</title>
  </head>

  <body>
  
  {{#if errors}}
    <div>
      <div class="errorContainer">
        {{#each errors}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    </div>
  {{/if}}

    <div id="wrapper">
      <header>
        <!-- Navigation -->
        <nav>
          <div>
            <a href="/">Home</a>
            <a href="/dashboard">Dashboard</a>
            <a href="/search">Search</a>
          </div>

          <!-- Logged-in users -->
          {{#if hasUser}}
            <div class="user">
              <a href="/create">Add Animal</a>
              <a href="/logout">Logout</a>
            </div>
          {{else}}
            <!-- Guest users -->
            <div class="guest">
              <a href="/login">Login</a>
              <a href="/register">Register</a>
            </div>
          {{/if}}
        </nav>
      </header>
    </div>

      {{{body}}}

    <footer>
      <p>@Friendly World</p>
    </footer>
  </body>
</html>
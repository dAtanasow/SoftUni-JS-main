    <main>
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
        {{#if errors}}
        <div>
          <div class="errorContainer">
            {{#each errors}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        </div>
      {{/if}}
    
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form method="post">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" {{#if data.name}}
          value="{{data.name}}"
          {{/if}}>
                    <label>Location:</label>
                    <input type="text" id="location" name="location" {{#if data.location}}
          value="{{data.location}}"
          {{/if}}>
                    <label>Elevation:</label>
                    <input type="number" id="elevations" name="elevation" {{#if data.elevation}}
          value="{{data.elevation}}"
          {{/if}}>
                    <label>Year of Last Eruption:</label>
                    <input type="number" id="last-year-eruption" name="lastEruption" {{#if data.lastEruption}}
          value="{{data.lastEruption}}"
          {{/if}}>
                    <label>Image:</label>
                    <input type="text" id="image" name="image"
                        {{#if data.image}}
          value="{{data.image}}"
          {{/if}}/>
                    <label>Volcano Type:</label>
                    <select id="type" name="type">
                        <option value="Supervolcanoes">Supervolcanoes</option>
                        <option value="Submarine" selected>Submarine</option>
                        <option value="Subglacial">Subglacial</option>
                        <option value="Mud">Mud</option>
                        <option value="Stratovolcanoes">Stratovolcanoes</option>
                        <option value="Shield">Shield</option>
                    </select>
                    <label>Description:</label>
                    <textarea id="description" name="description" placeholder="..." > {{#if data.description}} {{data.description}}
          </textarea>
          {{/if}}
                    <input type="submit" id="btn" value="Submit"></input>
                </form>
            </div>
        </section>
    </main>
<div class="planet-details">
  <img src="{{planet.image}}" alt="Alpha Centauri Bb" class="planet-image" />
  <div class="planet-info">
    <h2>Name: {{planet.name}}</h2>
    <p><strong>Age:</strong> {{planet.name}}billion years</p>
    <p><strong>Solar System:</strong> {{planet.solarSystem}}</p>
    <p><strong>Type:</strong> {{planet.type}}</p>
    <p><strong>Moons:</strong> {{planet.moons}}</p>
    <p><strong>Size:</strong> {{planet.size}} km</p>
    <p><strong>Rings:</strong> {{planet.rings}}</p>
    <p>
      <strong>Description:</strong> {{planet.description}}
    </p>
  </div>

  <div class="actions">
    {{#if hasUser}}
    {{#if isOwner}}
    <a class="edit-btn" href="/edit/{{planet._id}}">Edit</a>
    <a class="delete-btn" href="/delete/{{planet._id}}">Delete</a>
    {{else}}
    {{#if hasLiked}}

    <p id="liked-message" class="liked-message hidden">
      You've already liked this planet.
    </p>
    {{else}}
    <a id="like-button" class="like-btn" href="/like/{{planet._id}}">Like</a>
  </div>
  {{/if}}
  {{/if}}
  {{/if}}
</div>